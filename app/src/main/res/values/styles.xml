<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        // фикс для экранов с челкой
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimaryDark">@color/mainBackground</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.SearchProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:indeterminate">false</item>
    </style>

    <style name="AppTheme.SearchHorizontalProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
